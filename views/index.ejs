<!DOCTYPE html>
<html>
<head>
    <title>MovieWeb</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        h1 {
            font-size: 36px;
            color: #333333;
            margin-bottom: 20px; /* Margen inferior para separar del input */
        }

        form {
            text-align: center;
        }

        input[type="text"] {
            padding: 10px;
            width: 300px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 18px;
            margin-right: 10px;
        }

        div[id="checks"] {
            padding: 10px;
            width: 300px;
            border-radius: 4px;
            font-size: 18px;
            margin-top: 10px; /* Margen superior para separar del input */
        }

        button[type="submit"] {
            background-color: #0078d4;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
<h1>MovieWeb</h1>
<form action="/buscar" method="GET" onsubmit="return validateSearch()">
    <input type="text" name="q" placeholder="Buscar películas..." required />
    <button type="submit">Buscar</button>
    <div id="checks">
        <input type="checkbox" id="movie" name="filter" value="movie" checked />
        <label for="movie">Película</label>
        <input type="checkbox" id="actor" name="filter" value="actor" checked />
        <label for="actor">Actor</label>
        <input type="checkbox" id="director" name="filter" value="director" checked />
        <label for="director">Director</label>
    </div>
</form>
<script>
    function validateSearch() {
        const checkboxes = document.querySelectorAll('input[name="filter"]:checked');
        if (checkboxes.length === 0) {
            alert("Debe seleccionar al menos un filtro");
            return false;
        }
        return true;
    }
</script>
</body>
</html>
