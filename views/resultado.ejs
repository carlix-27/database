<!DOCTYPE html>
<html>

<head>
    <title>Resultado de la Búsqueda</title>
    <link rel="stylesheet" href="/header.css">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <%- include('./partials/header') %>
        <div id="body">
            <h1 style="margin-top: 50px;">Resultados para: "<%= searchTerm %>"
            </h1>
            <div id="cast_crew"
                style="width: 85%;display: flex; flex-wrap: wrap; justify-content: space-evenly; text-align: center;">
                <!-- Movies Section -->
                <h2 style="width: 100%; text-align: left;">Películas</h2>
                
                
                <% if (movies.length===0) { %>
                    <p style="width: 100%; text-align: left;">No se encontraron películas.</p>
                    <% } else { %>
                        <ul style="width: 100%;">
                            <% movies.forEach((movie)=> { %>
                                <li><a href="/pelicula/<%= movie.movie_id %>">
                                        <%= movie.title %>
                                    </a></li>
                                <% }); %>
                        </ul>
                        <% } %>
                        <h2 style="width: 100%; text-align: left;">Actores</h2>
                            <!-- Actors Section -->
                            <% if (actors.length===0) { %>
                                <p style="width: 100%; text-align: left;">No se encontraron actores.</p>
                                <% } else { %>
                                    <ul style="width: 100%;">
                                        <% actors.forEach((actor)=> { %>
                                            <li><a href="/actor/<%= actor.person_id %>">
                                                    <%= actor.person_name %>
                                                </a></li>
                                            <% }); %>
                                    </ul>
                                    <% } %>

                                    <h2 style="width: 100%; text-align: left;">Directores</h2>
                                        <!-- Directors Section -->
                                        <% if (directors.length===0) { %>
                                            <p style="width: 100%; text-align: left;">No se encontraron directores.</p>
                                            <% } else { %>
                                                <ul style="width: 100%;">
                                                    <% directors.forEach((director)=> { %>
                                                        <li><a href="/director/<%= director.person_id %>">
                                                                <%= director.person_name %>
                                                            </a></li>
                                                        <% }); %>
                                                </ul>
                                                <% } %>
            </div>
            <p></p>
            <div id="inicio"><a href="/">Inicio</a></div>
        </div>
</body>

</html>